# Voltaxe Axon Engine Configuration
# Resilience Scoring Intelligence Service

# Database Configuration
# DATABASE_URL=postgresql://username:password@localhost:5432/voltaxe_db
# DATABASE_URL=sqlite:///./voltaxe_clarity.db  # Default for development

# Scoring Configuration
AXON_SCORING_INTERVAL=60          # Seconds between scoring cycles
ACTIVE_THRESHOLD_HOURS=24         # Hours to consider an endpoint "active"

# Risk Assessment Thresholds
RISK_CRITICAL_THRESHOLD=50        # Score below this = CRITICAL risk
RISK_HIGH_THRESHOLD=70            # Score below this = HIGH risk  
RISK_MEDIUM_THRESHOLD=85          # Score below this = MEDIUM risk
                                  # Score 85+ = LOW risk

# Vulnerability Scoring Weights
CRITICAL_VULN_DEDUCTION=40        # Points deducted per critical vulnerability
HIGH_VULN_DEDUCTION=25            # Points deducted per high vulnerability
MEDIUM_VULN_DEDUCTION=15          # Points deducted per medium vulnerability
LOW_VULN_DEDUCTION=5              # Points deducted per low vulnerability
UNKNOWN_VULN_DEDUCTION=10         # Points deducted per unknown vulnerability

# Behavioral Analysis Configuration
BEHAVIORAL_ANALYSIS_DAYS=7        # Days of behavioral history to analyze
SUSPICIOUS_EVENT_BASE_PENALTY=5   # Base penalty per suspicious event
SUSPICIOUS_EVENT_ESCALATION=8     # Escalation penalty for multiple events

# Logging Configuration
LOG_LEVEL=INFO                    # DEBUG, INFO, WARNING, ERROR, CRITICAL