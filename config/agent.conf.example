# Voltaxe Sentinel Agent Configuration

# API Server Configuration
# IMPORTANT: Use HTTPS in production!
# For development with self-signed certificates, TLS verification is auto-disabled for localhost/.local
API_SERVER=https://localhost
HEARTBEAT_INTERVAL=30s
RETRY_ATTEMPTS=3
RETRY_DELAY=5s

# TLS/SSL Configuration
# Set to true to skip TLS certificate verification (only for development with self-signed certs)
# Auto-enabled for localhost and .local domains
TLS_SKIP_VERIFY=false

# Monitoring Configuration  
SCAN_INTERVAL=60s
PROCESS_MONITORING=true
VULNERABILITY_SCANNING=true
BEHAVIORAL_ANALYSIS=true

# Security Settings
AGENT_ID=auto-generate
ENCRYPTION_ENABLED=true
TLS_VERIFY=true

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/voltaxe/agent.log
MAX_LOG_SIZE=100MB
LOG_RETENTION_DAYS=30

# Resource Limits
MAX_CPU_USAGE=10%
MAX_MEMORY_USAGE=256MB
