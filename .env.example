# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# =============================================================================
# CVE SYNC SERVICE
# =============================================================================
SYNC_INTERVAL_HOURS=24
CVE_SYNC_ENABLED=true

# =============================================================================
# AXON ENGINE (Intelligence)
# =============================================================================
AXON_ENGINE_ENABLED=true
RESILIENCE_SCORE_SCHEDULE=0 2 * * *  # Daily at 2 AM
EVENT_CORRELATION_ENABLED=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
SENTRY_DSN=  # Optional: Sentry error tracking

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_SUPABASE_URL=${SUPABASE_URL}
REACT_APP_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}
REACT_APP_ENVIRONMENT=development

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,https://app.voltaxe.com
CORS_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# Session timeout (minutes)
SESSION_TIMEOUT=480

# =============================================================================
# PRODUCTION DEPLOYMENT
# =============================================================================
DOMAIN=voltaxe.com
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/voltaxe.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/voltaxe.com.key

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *  # Daily at 3 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=voltaxe-backups

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_MALWARE_ANALYSIS=true
FEATURE_EVENT_CORRELATION=true
FEATURE_RESILIENCE_SCORE=true
FEATURE_PUSH_NOTIFICATIONS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=false
HOT_RELOAD=false
MOCK_DATA=false
